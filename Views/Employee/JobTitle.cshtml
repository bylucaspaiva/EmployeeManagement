@model EmployeeManagement.Models.JobTitle

<form asp-method="JobHistory" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Cargo:</label>
        <input asp-for="Name" class="form-control"/>
        <span class="invalid-feedback">@Html.ValidationMessageFor(model => model.Name)</span>
        <small class="text-danger">@ViewData.ModelState["Name"]?.Errors[0].ErrorMessage</small>
    </div>

    <div class="form-group">
        <label asp-for="CBO" class="control-label">CBO:</label>
        <input asp-for="CBO" class="form-control" />
        <span class="invalid-feedback">@Html.ValidationMessageFor(model => model.CBO)</span>
        <small class="text-danger">@ViewData.ModelState["CBO"]?.Errors[0].ErrorMessage</small>
    </div>

    <div class="form-group">
        <label asp-for="ActivityDescription" class="control-label">ActivityDescription</label>
        <input asp-for="ActivityDescription" class="form-control" pattern="^.{0,100}$" title="A Descrição deve ter no máximo 100 caracteres." />
        <span class="invalid-feedback">@Html.ValidationMessageFor(model => model.ActivityDescription)</span>
        <small class="text-danger">@ViewData.ModelState["ActivityDescription"]?.Errors[0].ErrorMessage</small>
    </div>
    <div class="form-group">
        <label asp-for="StartDate" class="control-label">Data de início:</label>
        <input asp-for="StartDate" class="form-control" />
        <span class="invalid-feedback">@Html.ValidationMessageFor(model => model.StartDate)</span>
        <small class="text-danger">@ViewData.ModelState["StartDate"]?.Errors[0].ErrorMessage</small>
    </div>


    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
